<h1> Add New Comment </h1>

<%= form_for :issue, url: comments_path do |form| %>
  <!--Body-->
  <p> 
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>

 <!--Issue ID-->
  <p>
    <%= form.label :issue_id %><br>
    <%= form.text_area :issue_id %>
  </p>

  <!--User ID-->
  <p>
    <%= form.label :user_id %><br>
    <%= form.text_area :user_id %>
  </p>

<% end %>