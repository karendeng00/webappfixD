<h1> Edit Comment </h1>

<%= form_for :comment, url: comment_path(@comment), method: :patch do |form| %>
    
    <!--Body-->
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>

<!--Image-->
    <p>
        <%= form.label :image %><br>
        <%= form.text_field :image %>
    </p>

  <!--Issue ID-->
  <p>
    <%= form.label :issue_id %><br>
    <%= form.text_field :issue_id %>
  </p>

  <!--User ID-->
  <p>
    <%= form.label :user_id %><br>
    <%= form.text_field :user_id %>
  </p>

  <!--Image-->
  <p>
    <%= form.label :image %><br>
    <%= form.text_area :image%>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>