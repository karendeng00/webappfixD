<h1> Add New Issue </h1>

<%= form_for :issue, url: issues_path do |form| %>
  <!--Title-->
  <p> 
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
 <!--Description-->
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <!--Location-->
  <p>
    <%= form.label :location %><br>
    <%= form.text_area :location %>
  </p>

<!--Issue Image-->  
  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </p>

<!--User-->
  <p>
    <%= form.label :user_id %><br>
    <%= form.text_field :user_id %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>